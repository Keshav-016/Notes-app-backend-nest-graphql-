generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id            String        @id @default(uuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  name          String
  email         String        @unique
  imageUrl      String? 
  password      String
  notes Notes[]
}

model Notes{
  id            String        @id @default(uuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  title         String
  description   String
  isImportant   Boolean
  userId        String 
  user Users @relation(fields: [userId], references: [id])

}